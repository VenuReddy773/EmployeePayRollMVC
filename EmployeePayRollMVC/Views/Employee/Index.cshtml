@model IEnumerable<ModelLayer.Services.EmployeeModel>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/Index.css" />

<div class="head">
     <img src="~/Assets/logo.png" style="width:50px;height:47px" />
     <div>
          <span style="color: #82A70C">EMPLOYEE</span><br />
          <span style="color: #42515F"> PAYROLL</span>
     </div>
 </div>
 <div class="heading">
    <h3>List Of Employee's</h3>
 </div>
 <div>
     <a class="btn-success" asp-action="Create">+ Add Employee</a>
 </div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.emp_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emp_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.profile_img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.startDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notes)
            </th>
             <th>
                @Html.Label("Actions")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.emp_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emp_name)
            </td>
            <td>
                <img src="Url.Content(Model.profile_img)">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notes)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.emp_id }) |
                @Html.ActionLink("Details", "Details", new {  id=item.emp_id  }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.emp_id })
            </td>
        </tr>}
    </tbody>
</table>
